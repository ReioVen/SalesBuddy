{
  "name": "salesbuddy-server",
  "version": "1.0.0",
  "description": "SalesBuddy backend server",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "npm run kill-port && timeout 2 && nodemon index.js",
    "test": "jest",
    "kill-port": "node scripts/kill-port.js",
    "kill-all": "node scripts/kill-all-node.js",
